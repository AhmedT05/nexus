{
    "manifest_version": 3,
    "name": "Nexus",
    "version": "1.0.3",
    "description": "Transfer contact data to Nexus Sales.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
        "https://*.nexussales.io/*",
      "https://onelink.intruity.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Contact Data Transfer"
    },
    "content_scripts": [
      {
        "matches": [
                "https://*.nexussales.io/*",
          "https://onelink.intruity.com/*"
        ],
            "js": ["content.js"],
            "run_at": "document_idle"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }